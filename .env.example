# =============================================================================
# ENVIRONMENT-BASED SECRETS - Never commit .env to source control (SOC 2)
# =============================================================================
NODE_ENV=development

# -----------------------------------------------------------------------------
# Backend (Fastify)
# -----------------------------------------------------------------------------
BACKEND_PORT=4000
API_BASE_URL=http://localhost:4000

# JWT - Use strong random values in production (e.g. openssl rand -base64 64)
JWT_ACCESS_SECRET=your-access-token-secret-min-32-chars
JWT_REFRESH_SECRET=your-refresh-token-secret-min-32-chars
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# Cookie settings (HTTPS-only in production)
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# Rate limiting
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX=10

# -----------------------------------------------------------------------------
# Database (Prisma)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/jab_app?schema=public

# -----------------------------------------------------------------------------
# Frontend (Next.js) - for API base URL
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:4000
